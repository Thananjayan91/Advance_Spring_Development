                <Font name="System Bold" size="13.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="txtLastName" labelFloat="true" layoutX="511.0" layoutY="62.0" prefHeight="37.0" prefWidth="148.0" promptText="Last Name">
